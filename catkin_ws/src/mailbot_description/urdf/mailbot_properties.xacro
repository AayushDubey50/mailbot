<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="blue"><color rgba="0 0 1 1"/></material>
  <material name="green"><color rgba="0 1 0 1"/></material>
  <material name="turquoise"><color rgba="0 1 1 1"/></material>
  <material name="red"><color rgba="1 0 0 1"/></material>
  <material name="purple"><color rgba="1 0 1 1"/></material>
  <material name="yellow"><color rgba="1 1 0 1"/></material>
  <material name="white"><color rgba="1 1 1 1"/></material>

  <xacro:property name="base_mass" value="24"/>
  <xacro:property name="base_color" value="blue"/>
  <xacro:property name="base_length" value="0.75"/>
  <xacro:property name="base_height" value="0.25"/>

  <xacro:property name="wheel_mass" value="12"/>
  <xacro:property name="wheel_color" value="red"/>
  <xacro:property name="wheel_length" value="0.05"/>
  <xacro:property name="wheel_radius" value="0.1"/>

  <xacro:property name="camera_mass" value="0.1"/>
  <xacro:property name="camera_color" value="green"/>
  <xacro:property name="camera_length" value="0.1"/>
  <xacro:property name="camera_height" value="0.5"/>

  <xacro:property name="lidar_mass" value="0.1"/>
  <xacro:property name="lidar_color" value="turquoise"/>
  <xacro:property name="lidar_length" value="0.1"/>
  <xacro:property name="lidar_height" value="0.1"/>

  <xacro:macro name="link_prism" params="name color mass length height *origin">
    <link name="${name}_link">
      <visual>
        <xacro:insert_block name="origin"/>
        <material name="${color}"/>
        <geometry>
          <box size="${length} ${length} ${height}"/>
        </geometry>
      </visual>
      <collision>
        <xacro:insert_block name="origin"/>
        <geometry>
          <box size="${length} ${length} ${height}"/>
        </geometry>
      </collision>
      <inertial>
        <xacro:insert_block name="origin"/>
        <mass value="${mass}"/>
        <inertia ixx="${(1/12) * mass * (length*length + length*length)}" ixy="0" ixz="0" iyy="${(1/12) * mass * (length*length + length*length)}" iyz="0" izz="${(1/12) * mass * (height*height + length*length)}"/>
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="link_cylinder" params="name color mass length radius *origin">
    <link name="${name}_link">
      <visual>
        <xacro:insert_block name="origin"/>
        <material name="${color}"/>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
      </visual>
      <collision>
        <xacro:insert_block name="origin"/>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
      </collision>
      <inertial>
        <xacro:insert_block name="origin"/>
        <mass value="${mass}"/>
        <inertia ixx="${(1/12) * mass * (3*radius*radius + length*length)}" ixy="0.0" ixz="0.0"
          iyy="${(1/12) * mass * (3*radius*radius + length*length)}" iyz="0.0" izz="${(1/2) * mass * (radius*radius)}"/>
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="joint_wheel" params="name parent child *origin">
    <joint name="${name}_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <xacro:insert_block name="origin"/>
      <limit effort="1000.0" velocity="200"/>
      <parent link="${parent}_link"/>
      <child link="${child}_link"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="joint_sensor" params="name parent child *origin">
    <joint name="${name}_joint" type="fixed">
      <axis xyz="0 1 0"/>
      <xacro:insert_block name="origin"/>
      <parent link="${parent}_link"/>
      <child link="${child}_link"/>
    </joint>
  </xacro:macro>

</robot>
